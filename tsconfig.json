//modify for executing Cypress without errors

{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["cypress/**/*.ts"]
}